RewriteEngine On
RewriteCond %{REQUEST_URI} !^/server
RewriteCond %{REQUEST_URI} !^/client
RewriteRule ^(.*)$ http://127.0.0.1:4321$1 [P,L]

# Prevent access to sensitive files
<FilesMatch "^\.env|package\.json|package-lock\.json|pnpm-lock\.yaml$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Enable CORS
Header set Access-Control-Allow-Origin "*" 