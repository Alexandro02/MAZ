---
import MainLayout from "@/src/layouts/MainLayout.astro";
import HeroSection from "@/src/components/hero/HeroSection.astro";
import ServicesHomeSection from "@/src/components/layout/ServicesHomeSection.astro";

import { highlightsElec } from "@/src/utils/comps.config";
import { fetchHeroSectionById } from "@/src/utils/queries/fetchHeroSection";

const heroData = await fetchHeroSectionById(284);
---

<MainLayout title="MAZ - Servicios para instalaciones eléctricas">
  <HeroSection {...heroData} />
  <ServicesHomeSection
    categories={[
      { label: "Armado de tableros" },
      { label: "Cableado" },
      { label: "Instalación de charola" },
      { label: "Tubería conduit" },
      { label: "Tubería neumática" },
    ]}
    title="Servicios de instalación eléctrica personalizados para cada necesidad"
    description={`En <b>MAZ Soluciones de Agua Helada</b>, comprendemos la importancia de una infraestructura eléctrica confiable. Por eso, <b>ofrecemos soluciones integrales en instalaciones eléctricas</b>, <b>garantizando</b> una integración precisa, operación <b>segura</b> y desempeño <b>óptimo</b> de todos tus sistemas.`}
    highlights={highlightsElec}
  />
</MainLayout>
