---
import MainLayout from "@/src/layouts/MainLayout.astro";
import HeroSection from "@/src/components/hero/HeroSection.astro";
import ServicesHomeSection from "@/src/components/layout/ServicesHomeSection.astro";

import { fetchHeroSections } from "@/src/utils/queries/fetchHeroSections";
import { brandsHvac, highlightsHvac } from "@/src/utils/comps.config";

const data = await fetchHeroSections("hvac_hero_section");
---

<MainLayout title="MAZ - Servicios para HVAC">
  <HeroSection {...data} />
  <ServicesHomeSection
    categories={[
      { label: "Chillers" },
      { label: "Equipos Tablero y TVR" },
      { label: "Torres de Enfriamiento" },
      { label: "Equipo Paquete y Divididos" },
      { label: "Bombas Centrífugas" },
      { label: "Tubería Hidráulica" },
    ]}
    title="Servicios HVAC Personalizados para Cada Necesidad"
    description={`<p>En <strong>MAZ Soluciones de Agua Helada</strong>, entendemos que cada cliente tiene requerimientos únicos. Por ello, ofrecemos <strong>soluciones HVAC a medida</strong>, asegurando eficiencia energética, reducción de costos operativos y prolongación de la vida útil de tus equipos.</p>`}
    highlights={highlightsHvac}
    brands={brandsHvac}
  />
</MainLayout>
