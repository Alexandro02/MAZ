---
import MainLayout from "@/src/layouts/MainLayout.astro";
import HeroSection from "@/src/components/hero/HeroSection.astro";
import ServicesHomeSection from "@/src/components/layout/ServicesHomeSection.astro";

import { highlightsEng } from "@/src/utils/comps.config";
import { fetchHeroSectionById } from "@/src/utils/queries/fetchHeroSection";

const heroData = await fetchHeroSectionById(285);
---

<MainLayout title="MAZ - Servicios para instalaciones eléctricas">
  <HeroSection {...heroData} />
  <ServicesHomeSection
    categories={[
      { label: "Ingenierías eléctricas e hidrosanitarias" },
      { label: "Hojas de cálculo" },
      { label: "Selección de equipos" },
      { label: "Distribución" },
      { label: "Catálogos de conceptos" },
      { label: "Planos" },
      { label: "Cálculos eléctricos" },
      { label: "Tierras físicas" },
      { label: "Calidad de energía" },
    ]}
    title="Soluciones de ingeniería personalizados para cada necesidad"
    description={`En <b>MAZ Soluciones de Agua Helada</b>, desarrollamos proyectos de ingeniería con un enfoque <b>técnico y estratégico</b>, garantizando soluciones eficientes y completamente adaptadas a las necesidades específicas de cada cliente.`}
    highlights={highlightsEng}
  />
</MainLayout>
