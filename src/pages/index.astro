---
import MainLayout from "@/src/layouts/MainLayout.astro";
import Welcome from "@/src/components/common/Welcome.astro";
import Products from "@/src/components/products/Products.astro";
import WhyUs from "@/src/components/common/WhyUs.astro";
import FAQ from "@/src/components/common/FAQ.astro";
import { LazyHeroCarousel } from "@/src/components/lazy";
---

<MainLayout title="MAZ - Soluciones de agua helada">
  <LazyHeroCarousel client:visible />
  <Welcome />
  <Products />
  <WhyUs />
  <FAQ
    image="https://placehold.co/600x400?text=Chillers+FAQ"
    alt="Preguntas frecuentes"
    faqs={[
      {
        question: "¿Cuándo debo programar el mantenimiento?",
        answer:
          "Recomendamos programarlo mínimo una vez al año antes de cada temporada.",
      },
      {
        question: "¿Con qué frecuencia debo cambiar filtros HVAC?",
        answer: "Cada 1 a 3 meses.",
      },
      {
        question: "¿Tienen garantía las reparaciones?",
        answer: "Sí, ofrecemos garantía en nuestras reparaciones.",
      },
      {
        question: "¿Cómo obtener presupuesto?",
        answer: "Contáctanos por nuestro formulario o correo.",
      },
    ]}
  />
</MainLayout>
