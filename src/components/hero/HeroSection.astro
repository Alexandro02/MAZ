---
import Image from "astro/components/Image.astro";

const {
  title_hero_section,
  subtitle_hero_section,
  bg_hero_section,
  breadcrumb_hero_section,
} = Astro.props;
---

<section class="relative w-full h-[40vh] lg:h-[34vh] flex items-end pb-[1rem]">
  <Image
    src={bg_hero_section || "/bg-hero-section-2.webp"}
    alt="Fondo Hero HVAC"
    class="absolute inset-0 w-full h-full object-cover"
    width={900}
    height={311}
    loading="lazy"
  />

  <!-- Capa oscura -->
  <div class="absolute inset-0 bg-[#24408D]/60 z-10"></div>

  <!-- Contenido -->
  <div
    class="relative z-20 w-full px-4 sm:px-6 lg:px-[12rem] text-white flex flex-col lg:flex-row gap-4 lg:gap-6 justify-between items-start lg:items-center"
  >
    <div class="flex-1">
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold">{title_hero_section}</h1>
      <p class="text-xs sm:text-sm mt-1 text-white/80">{breadcrumb_hero_section}</p>
    </div>
    <div class="flex-1 text-left">
      <p class="text-sm sm:text-base md:text-lg font-medium">
        {subtitle_hero_section}
      </p>
    </div>
  </div>
</section>

