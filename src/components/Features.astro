---
interface FeatureItem {
  icon: string; // path del SVG o ícono
  title: string;
  description: string;
}

const {
  features = [],
  title = "Características",
} = Astro.props;
---

<section class="py-16 px-4 lg:px-24 bg-white">
  <h2 class="text-2xl md:text-3xl font-bold text-[#24408d] mb-12 text-left">
    {title}
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
    {
      features.map(({ icon, title, description }: FeatureItem) => (
        <div class="flex flex-col items-start text-left space-y-4">
          <img src={icon} alt={title} class="h-12 w-12" />
          <h3 class="text-lg font-bold text-[#0e0e0e]">{title}</h3>
          <p class="text-sm text-gray-700">{description}</p>
        </div>
      ))
    }
  </div>
</section>
