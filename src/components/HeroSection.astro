---
const {
  title = "HVAC",
  subtitle = "Especialistas en servicios HVAC",
  background = "/bg-hero-section-1.jpg",
  breadcrumb = "Inicio > Servicios > HVAC",
  sectionLabel = "Nuestros Servicios",
} = Astro.props;
---

<section class="relative w-full h-[30vh] lg:h-[30vh] flex items-end pb-[2rem]">
  <img
    src={background}
    alt="Fondo Hero HVAC"
    class="absolute inset-0 w-full h-full object-cover"
  />

  <!-- Capa oscura -->
  <div class="absolute inset-0 bg-[#24408D]/60 z-10"></div>

  <!-- Contenido -->
  <div
    class="relative z-20 w-full px-6 lg:px-[12rem] text-white flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4"
  >
    <div>
      <p
        class="uppercase tracking-widest bg-gray-200/30 text-white px-3 py-1 text-sm font-bold rounded-full mb-2"
      >
        {sectionLabel}
      </p>
      <h1 class="text-3xl md:text-4xl font-bold">{title}</h1>
      <p class="text-sm mt-2 text-white/80">{breadcrumb}</p>
    </div>
    <div>
      <p class="text-lg md:text-xl font-medium">{subtitle}</p>
    </div>
  </div>
</section>
