---
import ProductGallery from "@/src/components/products/ProductGallery.astro";

interface CapacityOption {
  label: string;
  value: string;
}

const images = [
  {
    src: "https://placehold.co/600x600",
    alt: "Chiller frontal en azotea industrial",
  },
  {
    src: "https://placehold.co/600x200",
    alt: "Instalación de chiller en proceso",
  },
  {
    src: "https://placehold.co/600x800",
    alt: "Detalle técnico del equipo",
  },
];

const {
  category = "Chillers",
  title = "FrostWave",
  description = "",
  highlights = "",
  capacities = [],
} = Astro.props;
---

<section
  class="grid grid-cols-1 lg:grid-cols-2 gap-10 px-6 md:px-10 lg:px-[12rem] py-12 items-center bg-white"
>
  <!-- Carrusel del product -->
  <ProductGallery images={images} />

  <!-- Detalles del producto -->
  <div class="space-y-6">
    <!-- Categoría badge -->
    <span
      class="inline-block bg-[#24408D] text-white text-sm px-4 py-1 rounded-full font-medium"
    >
      {category}
    </span>

    <!-- Título -->
    <h1 class="text-3xl font-bold text-[#0c0c0c]">{title}</h1>

    <!-- Descripción -->
    <p class="text-gray-700 font-medium leading-relaxed">{description}</p>

    <!-- Destacado -->
    <p class="text-gray-600">{highlights}</p>

    <!-- Capacidades -->
    {
      capacities.length > 0 && (
        <div>
          <h2 class="text-lg font-semibold mb-3">
            Elije la capacidad que necesites
          </h2>
          <div class="flex flex-wrap gap-4">
            {capacities.map(({ label, value }: CapacityOption) => (
              <button
                type="button"
                class="bg-[#e9f1fb] cursor-pointer text-[#0c0c0c] font-bold py-3 px-6 rounded-md hover:bg-[#d0e2f9] transition"
              >
                {label}
              </button>
            ))}
          </div>
        </div>
      )
    }
  </div>
</section>
