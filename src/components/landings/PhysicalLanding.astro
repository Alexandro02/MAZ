      <!-- Beneficios -->
      <div>
        <h3 class="text-lg font-semibold">Beneficios clave:</h3>
        <ul
          class="list-disc list-inside text-sm sm:text-base text-gray-700 space-y-1"
        >
          <li>Protección contra descargas eléctricas</li>
          <li>Reducción de interferencias eléctricas</li>
          <li>Cumplimiento de normativas NOM-001-SEDE</li>
        </ul>
      </div>
    </div>

    <a
      href="#contacto"
      class="inline-block mt-4 bg-[#24408d] hover:bg-[#1b3270] text-white font-semibold px-6 py-2 rounded transition"
    >
      Solicita una medición profesional
    </a>
  </div>

  <!-- Imagen -->
  <div class="lg:w-5/12 w-full">
    <img
