import Checks from "@/public/checks.svg";

const reasons = [
  {
    title: "Técnicos expertos",
    description:
      "Confíe en nosotros para brindarle soluciones confiables y un servicio excepcional, y tranquilidad para sus necesidades de HVAC.",
  },
  {
    title: "Horario flexible",
    description:
      "Confíe en nosotros para brindarle soluciones confiables y un servicio excepcional, y tranquilidad para sus necesidades de HVAC.",
  },
  {
    title: "Precios Transparentes",
    description:
      "Confíe en nosotros para brindarle soluciones confiables y un servicio excepcional, y tranquilidad para sus necesidades de HVAC.",
  },
  {
    title: "Piezas de Calidad",
    description:
      "Confíe en nosotros para brindarle soluciones confiables y un servicio excepcional, y tranquilidad para sus necesidades de HVAC.",
  },
  {
    title: "Servicios de Emergencia",
