---
import ContactForm from "@/src/components/common/ContactForm.astro";
---

<div
  id="contact-modal"
  class="fixed inset-0 z-[100] text-[#24408d] bg-black/60 flex items-center justify-center transition-opacity duration-300 opacity-0 pointer-events-none"
>
  <div
    class="relative bg-white w-full max-w-3xl rounded-xl shadow-2xl overflow-y-auto max-h-[90vh]"
  >
    <!-- BotÃ³n cerrar -->
    <button
      id="close-modal"
      class="absolute top-4 right-4 text-gray-500 hover:text-black text-3xl font-bold cursor-pointer"
      aria-label="Cerrar"
    >
      &times;
    </button>

    <!-- Formulario embebido -->
    <ContactForm />
  </div>
</div>


