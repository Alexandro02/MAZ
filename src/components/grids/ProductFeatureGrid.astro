---
interface Props {
  title: string;
  subtitle?: string;
  features: string[];
  imageUrl: string;
  imageAlt?: string;
  imageLeft?: boolean;
  ctaUrl?: string;
  ctaLabel?: string;
}

const {
  title,
  subtitle = "",
  features,
  imageUrl,
  imageAlt = title,
  imageLeft = false,
  ctaUrl = "#",
  ctaLabel = "Ve más aquí",
} = Astro.props;
---

<div class={`grid grid-cols-1 lg:grid-cols-2 gap-10 items-center`}>
  {
    imageLeft && (
      <div>
        <img
          src={imageUrl}
          alt={imageAlt}
          class="rounded-xl w-full object-cover shadow-md"
        />
      </div>
    )
  }

  <div class="space-y-4">
    <h2 class="text-2xl sm:text-3xl font-bold text-[#24408d]">{title}</h2>
    {subtitle && <p class="text-lg font-semibold">{subtitle}</p>}
    <ul class="list-disc list-inside text-base text-gray-700 space-y-2">
      {features.map((f) => <li>{f}</li>)}
    </ul>
    <a
      href={ctaUrl}
      class="inline-block mt-4 bg-[#24408d] hover:bg-[#1b3270] text-white font-semibold px-6 py-2 rounded transition"
    >
      {ctaLabel}
    </a>
  </div>

  {
    !imageLeft && (
      <div>
        <img
          src={imageUrl}
          alt={imageAlt}
          class="rounded-xl w-full object-cover shadow-md"
        />
      </div>
    )
  }
</div>
